<div class="row-fluid profile-title visible-desktop">
	<div class="span12">
	  	<div class="page-header">
		 	<h1>{{t "myaccount.profile.profile"}}</h1>
		</div>
  	</div>
</div>

<div class="row-fluid">
	<div class="span12">
		<form class="form-inline">
		  	<label for="email">Email </label>
		  	<input type="text" placeholder="john.doe@email.com" id="email" name="email" value="{{email}}"/>
		  	<button class="btn btn-success change-email">{{t "myaccount.profile.change_email"}}</button>
		</form>

		<hr />
	</div>
</div>


<div class="row-fluid">
	<div class="span12">
		<form class="form-horizontal">
			<div class="control-group">
			    <label class="control-label" for="password">{{t "myaccount.profile.password"}}</label>
			    <div class="controls">
			      	<input type="password" id="password" name="password"/>
			    </div>
			</div>
		  	<div class="control-group">
			    <label class="control-label" for="confirm_password">{{t "myaccount.profile.confirm_password"}}</label>
			    <div class="controls">
			      	<input type="password" id="confirm_password" name="confirm_password"/>
			    </div>
			</div>
		  	<div class="control-group">
		    	<div class="controls">
		      	<button type="submit" class="btn btn-success change-password">{{t "myaccount.profile.change_password"}}</button>
		    	</div>
		  	</div>
		</form>
	</div>
</div>
