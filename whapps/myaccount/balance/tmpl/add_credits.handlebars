<div class="add-credits-content-wrapper">
    <div class="fancy-header">
        <div class="left-image">{{t "core.layout.currency_used"}}</div>
        <div class="title-block">{{t "myaccount.balance.credit_balance"}}</div>
        <div class="right-block box-white-border"><div class="box-white-content content"><div class="main-title">{{t "core.layout.currency_used"}}{{amount}}</div></div></div>
    </div>

    <div class="box-content gray-box">
        <div class="line-content">
            <div class="line-label">
                <i class="icon-question-sign" data-toggle="tooltip" data-placement="left" data-original-title="{{t "myaccount.balance.help_add_credit_one"}}"></i>
                {{t "myaccount.balance.add_credit_one"}}
            </div>
            <div class="line-value">
                <div class="fancy-dollar-sign">{{t "core.layout.currency_used"}}</div>
                <input type="text" pattern="\d+(\.\d{2})?" id="amount" placeholder="{{t "myaccount.balance.placeholder_amount"}}" name="amount"/>
            </div>
            <div class="line-button">
                <button class="btn btn-success add-credit">{{t "myaccount.balance.add_credit"}}</button>
            </div>
        </div>

        <hr/>

        <div class="line-content">
            <div class="line-label">
                <i class="icon-question-sign" data-toggle="tooltip" data-placement="left" data-original-title="{{t "myaccount.balance.help_auto_recharge"}}"></i>
                {{t "myaccount.balance.auto_recharge"}}
            </div>
            <div class="line-value">
            </div>
            <div class="line-button">
                <div class="switch">
                    <input type="checkbox" id="auto-recharge-trigger">
                </div>
            </div>
        </div>
        <div id="recharge_content" {{#unless limits.recharge.enabled}}style="display: none;"{{/unless}}>
            <div class="line-content">
                <div class="line-label smaller">
                    <i class="icon-question-sign" data-toggle="tooltip" data-placement="left" data-original-title="{{t "myaccount.balance.help_when_balance_falls"}}"></i>
                    {{t "myaccount.balance.when_balance_falls"}}
                </div>
                <div class="line-value">
                    <div class="fancy-dollar-sign">{{t "core.layout.currency_used"}}</div>
                    <input type="text" pattern="\d+(\.\d{2})?" placeholder="{{t "myaccount.balance.placeholder_threshold_recharge"}}" id="threshold_recharge" name="threshold_recharge" value="{{limits.recharge.threshold}}"/>
                </div>
                <div class="line-button">
                </div>
            </div>
            <div class="line-content">
                <div class="line-label smaller">
                    <i class="icon-question-sign" data-toggle="tooltip" data-placement="left" data-original-title="{{t "myaccount.balance.help_recharge"}}"></i>
                    {{t "myaccount.balance.recharge"}}
                </div>
                <div class="line-value">
                    <div class="fancy-dollar-sign">{{t "core.layout.currency_used"}}</div>
                    <input type="text" pattern="\d+(\.\d{2})?" placeholder="{{t "myaccount.balance.placeholder_recharge"}}" id="recharge_amount" name="recharge_amount" value="{{limits.recharge.amount}}"/>
                </div>
                <div class="line-button">
                    <button id="confirm_recharge" class="btn btn-success">{{t "myaccount.balance.confirm"}}</button>
                </div>
            </div>
        </div>
    </div>
</div>
