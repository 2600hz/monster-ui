<div class="row-fluid balance-title visible-desktop">
	<div class="span12">
	  	<div class="page-header">
		 	<h1>{{t "myaccount.balance.balance"}}</h1>
		</div>
  	</div>
</div>

<div class="row-fluid">
	<div class="span12">
        <div class="help-box gray-box">
            <div class="wrapper-icon">
                <i class="icon-info-sign2"></i>
            </div>
            <div class="text-wrapper">
                <p>{{t "myaccount.balance.pay_per_minute"}}</p>
                <div class="amount-wrapper">{{t "myaccount.balance.current_balance"}}<span class="amount">{{amount}}</span></div>
            </div>
        </div>
	</div>
</div>

<div class="row-fluid">
	<div class="span12">
		<form id="add_credit_form" class="form-inline">
		  	<label for="amount">{{t "myaccount.balance.amount"}} :</label>
		  	<input type="text" id="amount" name="amount" />
		  	<button class="btn btn-success add-credit">{{t "myaccount.balance.add_credit"}}</button>
		</form>
	</div>
</div>
