<div id="pbx_connector_container">
    <div class="pbx-title">
        <img width="80" height="56" src="whapps/pbxs/pbxs_manager/css/images/endpoints/{{img_link}}.png" class="img-style">{{server_name}}
        <span class="pull-right">
            <div class="navbar">
                <ul class="nav pull-right">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="icon-cog"></i></a>
                        <ul class="dropdown-menu">
                            <li class="settings-pbx-link" data-step="1"><a href="#"><i class="icon-edit"></i>{{t "pbxs.pbxs_manager.brand_selection"}}</a></li>
                            <li class="settings-pbx-link" data-step="2"><a href="#"><i class="icon-signal"></i>{{t "pbxs.pbxs_manager.ip_configuration"}}</a></li>
                            <li class="settings-pbx-link" data-step="3"><a href="#"><i class="icon-wrench"></i>{{t "pbxs.pbxs_manager.testing"}}</a></li>
                            <li class="divider"></li>
                            <li><a id="delete_pbx" href="#"><i class="icon-trash"></i>{{t "pbxs.pbxs_manager.delete_pbx"}}</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </span>
    </div>
    <div id="actions_wrapper">
        <form class="form-inline">
            <label>{{t "pbxs.pbxs_manager.numbers"}}</label>
            <label id="count_phones"></label>
            <span id="trigger_links">
                <a href="#" id="remove_numbers" class="action-number"><i class="icon-remove icon-red"></i>{{t "pbxs.pbxs_manager.remove"}}</a>

                <li class="dropdown dropdown-move">
                    <a href="#" id="move_numbers" role="button" class="action-number dropdown-toggle" data-toggle="dropdown"><i class="icon-share-alt icon-orange"></i>{{t "pbxs.pbxs_manager.move"}}</a>
                    <ul class="dropdown-menu">
                        {{#each servers_list}}
                            <li class="pbx-dropdown" data-index="{{index}}"><a href="#"><img width="45" height="32" src="whapps/pbxs/pbxs_manager/css/images/endpoints/{{img_link}}.png" class="img_style"/>{{server_name}}</a></li>
                        {{else}}
                            <li class="pbx-dropdown empty">{{t "pbxs.pbxs_manager.no_pbx"}}</li>
                        {{/each}}
                    </ul>
                </li>
            </span>
            <a href="#" id="buy_numbers" class="action-number"><i class="icon-shopping-cart icon-green"></i>{{t "pbxs.pbxs_manager.buy"}}</a>
            <a href="#" id="port_numbers" class="action-number"><i class="icon-random icon-blue"></i>{{t "pbxs.pbxs_manager.port"}}</a>

            <span class="search-box pull-right">
                <i class="icon-search"></i>
                <input type="text" class="search-query" placeholder="{{t "pbxs.pbxs_manager.search"}}..."></input>
            </span>
        </form>
    </div>

    <div id="numbers_wrapper" class="numbers-wrapper">
    </div>
    <div id="search_results"></div>
</div>
